IDI_MAIN_ICON    ICON   "Tetris.ico"

IDB_BLOCK_BLUE   BITMAP "Tetris_Blue.bmp"
IDB_BLOCK_CYAN   BITMAP "Tetris_Cyan.bmp"
IDB_BLOCK_GRAY   BITMAP "Tetris_Gray.bmp"
IDB_BLOCK_GREEN  BITMAP "Tetris_Green.bmp"
IDB_BLOCK_RED    BITMAP "Tetris_Red.bmp"
